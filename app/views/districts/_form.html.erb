<%= form_for(@district, :html => {:class => 'form-horizontal'} ) do |f| %>
  <% if @district.errors.any? %>
    <div id="error_explanation">
      <% @district.errors.full_messages.each do |msg| %>
        <p class="text-error"><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :code, :class=>'control-label' %>
    <%= f.number_field :code %>
  </div>
  <div class="control-group">
    <%= f.label :code_stat, :class=>'control-label' %>
    <%= f.number_field :code_stat %>
  </div>
  <div class="control-group">
    <%= f.label :abbr, :class=>'control-label' %>
    <div class="controls"><%= f.text_field :abbr %></div>
  </div>
  <div class="control-group">
    <%= f.label :name_eng, :class=>'control-label' %>
    <div class="controls"><%= f.text_field :name_eng %></div>
  </div>
  <div class="control-group">
    <%= f.label :centar, :class=>'control-label' %>
    <div class="controls"><%= f.text_field :centar %></div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class=>'control-label' %>
    <div class="controls"><%= f.text_field :name %></div>
  </div>
  <div class="control-group">
    <%= f.label :population, :class=>'control-label' %>
    <div class="controls"><%= f.number_field :population %></div>
  </div>
  <div class="control-group">
    <%= f.label :municipalities, :class=>'control-label' %>
    <div class="controls"><%= f.number_field :municipalities %></div>
  </div>

  <div class="control-group">
    <%= f.label :job_type, 'Entitet', :class=>'control-label' %>
    <div class="controls">

      <%= f.collection_select :entity_id, @entities, :id, :abbr, {:prompt => false}, :class => 'input-xlarge'  %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sačuvaj", :class => "btn btn-primary" %>
  </div>
<% end %>
