<h3>Regije / Kantoni</h3>

<table class="table table-zebra table-striped">
  <thead>
    <tr>
      <th>Code stat</th>
      <th>Abbr</th>
      <th>Naziv eng</th>
      <th>Centar</th>
      <th>Naziv</th>
      <th>Populacija</th>
      <th>Općina</th>
      <th>Entitet</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<% @districts.each do |district| %>
  <tr>
    <td><%= district.code_stat %></td>
    <td><%= district.abbr %></td>
    <td><%= district.name_eng %></td>
    <td><%= district.centar %></td>
    <td><%= district.name %></td>
    <td><%= district.population %></td>
    <td><%= district.municipalities.count %></td>
    <td><%= district.entity.abbr %></td>
    <td><%= link_to 'Uredi', edit_district_path(district), :class => 'btn' %></td>
    <td><%= link_to 'Izbriši', district, method: :delete, data: { confirm: 'Jeste li sigurni?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Dodaj novu regiju/kanton', new_district_path , :class => "btn" %>
