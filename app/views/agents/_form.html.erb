<hr>
<%= form_for(@agent, :html => {:class => 'form-horizontal'} ) do |f| %>
  <% if @agent.errors.any? %>
    <div id="error_explanation">
      <% @agent.errors.full_messages.each do |msg| %>
        <p class="text-error"><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :uid, "UID", :class=>'control-label' %>
    <div class="controls"><%= f.text_field :uid, :class => 'input-xlarge'  %></div>
  </div>
  <div class="control-group">
    <%= f.label :agent, :class=>'control-label'  %>
    <div class="controls"><%= f.text_field :agent, :class => 'input-xlarge' %></div>
  </div>
  <div class="actions">
    <%= f.submit "Sačuvaj", :class => "btn btn-primary" %>
  </div>
<% end %>
