
<p>
  <b>Institucija:</b>
  <%= @he.center.name %>
</p>

<p>
  <b>Šifra:</b>
  <%= @he.code %>
</p>

<p>
  <b>Naziv:</b>
  <%= @he.name %>
</p>

<% if @he.chief_id && @he.chief.full_name %>
<p>
  <b>Šef službe:</b>
  <%= @he.chief.full_name %>
</p>
<% end %>

<% if @he.nurse_id && @he.nurse.full_name %>
<p>
  <b>Med. tehničar:</b>
  <%= @he.nurse.full_name %>
</p>
<% end %>

