<h2>Uvoz podataka:</h2>
<hr>
<%= form_tag imports_path, multipart: true, :class => 'form-horizontal'  do %>
  <div class="control-group">
    <%= label :table, 'Tabela:', :class=>'control-label'  %>
    <div class="controls">
      <select name="table" id="table">
        <option value="icds">ICD</option>
        <option value="agents">Agenti</option>
        <option value="cases">Slučajevi</option>
        <option value="phis">Regionalni zdravstveni zavodi (PHI)</option>
        <option value="laboratories">Laboratorije (Lab)</option>
        <option value="hes">Službe / odjeli / (HES)</option>
        <option value="centers">Institucije (DZ)</option>
        <option value="users">Korisnici (Login)</option>
      </select>
    </div>
  </div>
  <div class="control-group">
    <%= label :file, 'CSV datoteka:', :class=>'control-label'  %>
    <div class="controls">
      <%= file_field_tag :file, :title => 'Izaberite CSV', :accept => 'text/comma-separated-values, text/csv, application/csv, application/excel, application/vnd.ms-excel, application/vnd.msexcel, text/anytext, application/plain, text/plain' %>
    </div>
  </div>
  <%= submit_tag "Import", :class => 'btn btn-primary' %>
<% end %>